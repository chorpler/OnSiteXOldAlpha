{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015"
  },
  "include": [
    "src/**/*.ts",
    "node_modules/moment/moment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "Docs/**"
  ],
  "compileOnSave": false
}
